# Production Environment - Synology NAS
# Kopier til .env.prod og udfyld

# MQTT Broker (kører på samme Synology)
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=admin
MQTT_PASSWORD=<din-mqtt-password>
MQTT_CLIENT_ID=admin-platform

# Database
DATABASE_URL=sqlite:////data/app.db

# API (opdater til Synology LAN IP)
VITE_API_URL=http://192.168.1.100:8000

# Legacy MySQL (hvis brugt)
LEGACY_DB_HOST=sql.ufi-tech.dk
LEGACY_DB_PORT=42351
LEGACY_DB_NAME=Ufi-Tech
LEGACY_DB_USER=<user>
LEGACY_DB_PASSWORD=<password>

# SSH Tunnel config
TUNNEL_PORT_MIN=22000
TUNNEL_PORT_MAX=22100
TUNNEL_DEFAULT_PORT=2222
TUNNEL_DEFAULT_HOST=tunnel.ufi-tech.dk
TUNNEL_DEFAULT_USER=tunnel
TUNNEL_DEFAULT_KEY_PATH=/home/pi/.ssh/id_tunnel
